---
import ProjectCard from "./ProjectCard.astro";

const projects = [
  {
    title: "Easy Sewa",
    description: "Making esewa payments easier.",
    link: "https://easy-sewa.js.org",
    image: "https://github.com/npm.png",
  },
  {
    title: "Geeta Mini",
    description: "Minimalist Geeta Reader with Commentaries",
    link: "https://geeta.prasuco.com",
    image: "https://github.com/github.png",
  },
];
---

<section class="space-y-2">
  <h2 class="font-semibold">Projects</h2>

  {
    projects.map((project) => (
      <ProjectCard
        title={project.title}
        description={project.description}
        link={project.link}
        image={project.image}
      />
    ))
  }
</section>
