---
import { ExternalLink } from "@lucide/astro";

interface Props {
  title: string;
  description: string;
  link: string;
  image: string;
}
const { title, description, link, image } = Astro.props;
---

<div class="flex group flex-row items-center justify-between">
  <div class="flex flex-row gap-4 rounded-lg">
    <img src={image} alt={title} class="w-12 rounded-lg" />
    <div class="">
      <h3 class="font-medium">{title}</h3>
      <p class="font-normal opacity-50">{description}</p>
    </div>
  </div>
  <a
    href={link}
    class="open hidden group-hover:block transition-all duration-300 delay-200 ease-in-out"
  >
    <ExternalLink size={16} />
  </a>
</div>
