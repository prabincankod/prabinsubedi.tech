---
import "../../src/main.css";

const { title } = Astro.props;
import Header from "./../components/Header.astro";
import Footer from "../components/Footer.astro";

console.log(Astro.params);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="sitemap" href="/sitemap-index.xml" />

    {
      Astro.params &&
        // @ts-ignore
        Astro.params.slug && (
          <meta
            property="og:image"
            content={`https://prabin.is-a.dev/og/${Astro.params.slug}.png`}
          />
        )
    }
  </head>
  <body class="bg-background text-foreground flex min-h-screen flex-col">
    <div
      class="container mx-auto space-y-6 max-w-2xl py-8 px-4 gap-8 flex flex-col flex-1"
    >
      <Header />
      <div class="flex-1 space-y-8">
        <slot />
      </div>
      <Footer />
    </div>
  </body>
</html>
